<div>
<H1><%= @list.name  %></H1>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  <%= link_to "Delete", list_path(@list), data: { 'turbo-method': :delete}, class: "btn btn-gradient" %>
</div>
<p></p>
<p></p>
<% @list.bookmarks.each do |bookmark| %>
<div class="card-product">
  <img src= <%= bookmark.movie.poster_url %> />
  <div class="card-product-infos">
    <h2><%= bookmark.movie.title %></h2>
    <p> <strong>Comments: </strong> <%= bookmark.comment %></p>
    <p></p>
    <%= link_to 'Remove', bookmark_path(bookmark), class: "btn btn-ghost", data: { 'turbo-method': :delete} %>
  </div>
</div>
<% end %>


